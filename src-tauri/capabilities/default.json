{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "notification:default",
    "opener:default",
    "pty:default",
    "shell:allow-execute",
    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "store:default",
    "stronghold:default",
    "websocket:default",
    "fs:allow-remove",
    "fs:allow-watch",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-fstat",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "/"
        },
        {
          "path": "/**/*"
        }
      ]
    },
    "cache:default",
    "clipboard-manager:default"
  ]
}