{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Littlebook",
	"version": "0.1.0",
	"identifier": "app.littlebook.desktop",
	"build": {
		"frontendDist": "../public"
	},
	"mainBinaryName": "lb",

	"app": {
		"withGlobalTauri": true,
		"windows": [],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"resources": ["../public"],
		"category": "public.app-category.productivity",
		"fileAssociations": [
			{
				"ext": ["littlebook"],
				"name": "Littlebook File",
				"role": "Editor"
			}
		],
		"active": true,
		"targets": "all",
		"license": "AGPL-3.0",
		"icon": [
			"icons/32.png",
			"icons/64.png",
			"icons/256.png",
			"icons/512.png",
			"icons/1024.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
