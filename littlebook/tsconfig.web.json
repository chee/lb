{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.web.tsbuildinfo",
		"allowJs": true,
		"checkJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedSideEffectImports": true,
		"useUnknownInCatchVariables": false,
		"composite": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
		"paths": {
			"littlebook": ["./system/littlebook.ts"],
			"/littlebook:system/*": ["./system/*"],
			"bookstrap": ["./bookstrap/bookstrap.ts"]
		},
		"outDir": "./dist"
	},
	"include": [
		"bookstrap",
		"*.d.ts",
		"machine",
		"system",
		"user",
		"system/**/*.json"
	],
	"exclude": ["bookstrap/service-worker.ts", "bookstrap/build/vfs.js", "build"]
}
